<settings>
<category label="Display">
<setting id="view_mode" label="View Mode" type="number" default="50" />
<setting label="Categories Order" type="enum" default="0" id="categories" values="A-Z|Date"/>
<setting id="page" type="bool" label="Load All Pages at Once" default="false"/>
</category>
<category label="Streams">
<setting id="autoplay" type="bool" label="Autoplay" default="false"/>
<setting label="Catchup Source" type="enum" default="0" id="catchup" values="HLS|RTMP"/>
<setting label="Supplier" type="enum" default="0" id="supplier" values="AKAMAI|LIMELIGHT"/>
<setting id="mpd" type="bool" label="Live MPD Menu (Krypton+ only)" default="false"/>
</category>
<category label="Cache">
<setting id="cache" label="Cache" type="folder" option="writeable" default="special://temp" />
<setting id="cache.progress" type="bool" label="Show Progress" default="false"/>
</category>
</settings>